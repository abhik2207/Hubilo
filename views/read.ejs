<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hubilo - View users</title>
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
        <div class="nav flex gap-6 text-blue-500 text-lg">
            <a href="/">Back to home</a>
        </div>
        <hr class="mt-1 mb-12 opacity-30">

        <h1 class="text-3xl tracking-tight">All users</h1>
        <hr class="mt-1 mb-6 opacity-30">

        <div class="users flex gap-3 flex-wrap">
            <% if (users.length > 0){ %>
                <% users.forEach((user) => { %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <h1 class="text-xl">@<%= user.username %></h1>
                        <div class="w-full h-72 bg-zinc-700 rounded-md my-3 overflow-hidden">
                            <img src="<%= user.imageURL %>" alt="User image" class="w-full h-full object-cover object-center">
                        </div>
                        <h3 class="text-2xl tracking-tight"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <h5 class="text-zinc-500"><%= user.phone %></h5>
                        <div class="flex gap-3 mt-3">
                            <a href="/edit/<%= user._id %>" class="text-blue-500 cursor-pointer">Edit user</a>
                            <a href="/delete/<%= user._id %>" class="text-red-500 cursor-pointer">Delete user</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-700 text-2xl font-bold">No users yet</h3>
            <% } %>
        </div>
    </div>

    <script src="/javascripts/script.js"></script>
</body>
</html>